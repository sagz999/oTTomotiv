<div class="wrapper ">
    {{>admin-sidebar}}
    <div class="main-panel">
        {{>admin-navbar}}
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                         <a title="Add New Product" role="button" href="/admin/add-product" class="btn btn-primary"><span class="material-icons" style="margin-right:0.5rem;">add_box</span>Add</a>
                        <div class="card text-center">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title" style="font-weight: bold">All Products</h4>
                            </div>
                            <div class="card-body">

                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                            <th style="font-weight: bold;">
                                                Sl.No
                                            </th>
                                            <th style="font-weight: bold;">
                                                Name
                                            </th>
                                            <th style="font-weight: bold;">
                                                Date / Time
                                            </th>
                                            <th style="font-weight: bold;">
                                                Image
                                            </th>
                                            <th style="font-weight: bold;">
                                                Brand
                                            </th>

                                            <th style="font-weight: bold;">
                                                Category
                                            </th>
                                            <th style="font-weight: bold;">
                                                Car Model
                                            </th>
                                            <th style="font-weight: bold;">
                                                Price
                                            </th>
                                            <th style="font-weight: bold;">
                                                Action
                                            </th>

                                        </thead>
                                        <tbody>
                                            {{#each products}}
                                            <tr>
                                                <td>
                                                    {{add @index '1'}}
                                                </td>
                                                <td>
                                                    {{this.Product_Name}}
                                                </td>
                                                 <td>
                                                    {{this.Date}}
                                                </td>
                                                <td>
                                                    <img style="width:50px;height:50px"
                                                        src="/product-images/{{this._id}}_1.jpg" alt="">
                                                </td>
                                                <td>
                                                    {{this.Product_Brand}}
                                                </td>
                                                <td>
                                                    {{this.Sub_Category}}
                                                </td>
                                                <td>
                                                    {{this.Car_Model}}
                                                </td>
                                                <td class="text-primary">
                                                    â‚¹ {{this.Price}}
                                                </td>
                                                <td style="display: flex;">

