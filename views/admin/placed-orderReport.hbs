<div class="wrapper ">
    {{>admin-sidebar}}
    <div class="main-panel">
        {{>admin-navbar}}
        <div class="content">
            <div class="container-fluid">
                {{#checkArrayLengthPDF AllPlacedOrders}}
                {{/checkArrayLengthPDF}}
                {{#checkArrayLengthXLS AllPlacedOrders}}
                {{/checkArrayLengthXLS}}
                <div class="row">
                    <div class="col-md-12">
                        <div class="card text-center">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title " style="font-weight: bold;">Placed Orders</h4>
                            </div>
                            <div class="card-body">

                                <form action="/admin/fetchSortedReports" id="dateValidation" method="post" style="text-align: left;">
                                    <label for="startDate">From</label>
                                    <input type="date" oninput="checkStartDate()" max="{{todayDate}}" name="startDate" id="startDate">
                                    <label for="endDate">To</label>
                                    <input type="date" oninput="checkEndDate()" max="{{todayDate}}" name="endDate"
                                        id="endDate">
                                    <input type="hidden" name="source" value="PlacedOrders" id="">
                                    <button class="btn btn-success btn-sm" type="submit">Submit</button>
                                </form>

                                <div class="table-responsive">
                                    <table class="table" id="myTable">
                                        <thead class=" text-primary">
                                            <th style="font-weight: bold;">
                                                Sl.No
                                            </th>
                                            <th style="font-weight: bold;">
                                                Date
                                            </th>
                                            <th style="font-weight: bold;">
                                                User Id
                                            </th>
                                            <th style="font-weight: bold;">
                                                Order Id
                                            </th>
                                            <th style="font-weight: bold;">
                                                Pay Method
                                            </th>
                                            <th style="font-weight: bold;">
                                                Shop Mode
                                            </th>

                                             <th style="font-weight: bold;">
                                                Destination
                                            </th>
                                
                                            <th style="font-weight: bold;">
                                                Amount (â‚¹)
                                            </th>

                                        </thead>
                                        <tbody>
                                            {{#each AllPlacedOrders}}
                                            <tr>
                                                <td>
                                                    {{add @index '1'}}
                                                </td>
                                                <td>

                                                    {{this.Date}}
                                                </td>
                                                <td>
                                                    {{this.UserId}}
                                                </td>

                                                <td>
                                                    {{this._id}}
                                                </td>

                                                <td>
                                                    {{this.Pay_Method}}
                                                </td>
                                                <td>
                                                    {{this.Mode}}
                                                </td>

                                                <td>
                                                    {{this.Address.Town_City}}
                                                </td>
                                                <td>
                                                    {{this.Total_Amount}}
                                                </td>

                                            </tr>
                                            {{/each}}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{>admin-footer}}
       
    </div>
</div>

{{!-- html2pdf --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"
    integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script src="//cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>

<script>
    function getPdf() {
        var element = document.getElementById('myTable');
        html2pdf(element);
    }

    function getspreadSheet() {
        $(document).ready(function () {
            $("#myTable").table2excel({
                filename: "Order Report.xls"
            });
        });

    }
</script>

