<div class="wrapper ">
    {{>admin-sidebar}}
    <div class="main-panel">
        {{>admin-navbar}}
        <div class="content">

            <div class="row">
                <div class="col-md-1 col-sm-1 col-1"></div>
                <div class="col-md-10 col-sm-10 col-10">
                    <div class="card ">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title text-center" style="font-weight: bold">CAR BRAND MANAGEMENT</h4>
                        </div>
                        {{#if Msg}}
                        <div>
                            <h5 class="text-center mt-2" style="color:yellowgreen;font-weight:normal">{{Msg}}</h5>
                        </div>
                        {{/if}}
                        {{#if Err}}
                        <div>
                            <h5 class="text-center mt-2" style="color:red;font-weight:normal">{{Err}}</h5>
                        </div>
                        {{/if}}
                        <div class="card-body text-left">

                            

                            <div class="row">
                                <div class="col-md-6 text-center">
                                    <label style="font-weight: bold;color:#fff">Add car-brand</label>
                                    <form action="/admin/add-carBrand" method="post" enctype="multipart/form-data"
                                        id="addCarBrand">

                                        <div class="row">
                                            <div class="col-md-6">
                                                <input name="Car_Brand" class="form-control" type="text"
                                                    placeholder="Car-brand name">
                                            </div>
                                            <div class="col-md-6">
                                                <label class="btn btn-primary btn-sm" for="file1">Brand logo</label>
                                                <input data-toggle="modal" name="Img1" type="file" class="my-2 form-control-file"
                                                    id="file1" onchange="return fileValidation1()" hidden>
                                            </div>
                                        </div>

                                        <div class="row">

                                            <div class="col-md-6">
                                                <button type="submit" id="confirm-btn"
                                                    class="btn btn-success ml-2">
                                                    <i class="material-icons">add_to_photos</i> Add car-brand</button>
                                            </div>

                                            <div class="col-md-6">
                                                <img src="" alt="" style="width: 50px; height:auto;margin-top:5px" id="imgview1">
                                                <div id="errMsg1"></div>
                                            </div>

                                        </div>


                                        <!-- Modal for cropping-->

                                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

                                            <div class="modal-dialog modal-dialog-centered" role="document">

                                                <div class="modal-content">

                                                    <div class="modal-header">

                                                        <h4 class="modal-title" style="font-weight: bold;"
                                                            id="exampleModalLongTitle">Crop
                                                            Image</h4>
                                                    </div>

                                                    <div class="modal-body">
                                                        <div id="image-box" style="display:none;"></div>
                                                    </div>

                                                    <div class="modal-footer">

                                                        <button onclick="buttonDisplay()" type="button"
                                                            class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <button id="crop-btn" data-dismiss="modal" type="button"
                                                            class="btn btn-primary">Crop</button>

                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                    </form>
                                </div>

                                <div class="col-md-6 text-center">

                                    <label style="font-weight: bold;color:#fff">Add car-model</label>

                                    <form action="/admin/add-carModel" method="post"
                                        enctype="multipart/form-data" id="addCarModel">

                                        <div class="row">

                                            <div class="col-md-6">

                                                <select name="carBrand_Id"
                                                    style="background:#202940;color:#8b92a9;border:none">
                                                    <option value="" selected disabled>Choose a brand</option>
                                                    {{#each carBrands}}
                                                    <option value="{{this._id}}">{{this.Car_Brand}}</option>
                                                    {{/each}}
                                                </select>

                                            </div>

                                            <div class="col-md-6">
                                                <input name="Car_Model" class="form-control" type="text"
                                                    placeholder="Car-model name">
                                            </div>

                                        </div>


                                        <div class="row">

                                            <div class="col-md-6">
                                                <label class="btn btn-primary btn-sm" for="file2">Model-image</label>
                                                <input data-toggle="modal" name="Img2" type="file" class="my-2 form-control-file" id="file2" onchange="return fileValidation2()" hidden>
                                                    
                                            </div>

                                            <div class="col-md-6">

                                                
                                                <button type="submit" id="confirm-btn1"
                                                    class="btn btn-success ml-2">
                                                    <i class="material-icons">add_to_photos</i> Add car-model</button>
                                                
                                            </div>

                                        </div>

                                        <div class="row">

                                            

                                                <img src="" alt="" style="width:50px; height:auto;margin-left:15px;margin-top:5px" id="imgview2">
                                                <div id="errMsg2"></div>

                                            

                                        </div>

                                        <div class="modal fade" id="exampleModalCenter1" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

                                            <div class="modal-dialog modal-dialog-centered" role="document">

                                                <div class="modal-content">

                                                    <div class="modal-header">

                                                        <h4 class="modal-title" style="font-weight: bold;"
                                                            id="exampleModalLongTitle">Crop
                                                            Image</h4>
                                                    </div>

                                                    <div class="modal-body">
                                                        <div id="image-box1" style="display:none;"></div>
                                                    </div>

                                                    <div class="modal-footer">

                                                        <button onclick="buttonDisplay1()" type="button"
                                                            class="btn btn-secondary"
                                                            data-dismiss="modal">Close</button>
                                                        <button id="crop-btn1" data-dismiss="modal" type="button"
                                                            class="btn btn-primary">Crop</button>

                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                    </form>

                                </div>
                            </div>

                            <div class="row" style="margin-top: 30px;">
                                <div class="col-md-12">
                                    <table class="table table-dark" id="myTable">
                                        <thead>
                                            <tr>
                                                <th class="text-center" scope="col">Sl.No</th>
                                                <th class="text-center" scope="col">Brands</th>

                                                <th class="text-center" scope="col">Models</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            {{#each carBrands}}
                                            <tr class="bg-dark">

                                                <td class="text-center bg-dark">{{add @index '1'}}</td>

                                                <td class="text-left">

                                                    <span><button type="button" rel="tooltip" title="Remove car-brand"
                                                            class="btn btn-white btn-link btn-sm p-0 pb-1"
                                                            onclick="confirmcarBrandDelete('{{this.Car_Brand}}','{{this._id}}')">

                                                            <i class="material-icons">delete</i>

                                                        </button></span>
                                                    <span><img style="width:50px;height:50px"
                                                            src="/car-brand-logos/{{this._id}}CBL.jpg" alt=""></span>
                                                    <span>{{this.Car_Brand}}</span>
                                                </td>


                                                <td>
                                                    <ol>

                                                        {{#each this.Car_Model}}

                                                        <div class="d-flex my-2">


                                                            <button type="button" rel="tooltip" title="Remove car-model"
                                                                class="btn btn-white btn-link btn-sm p-0 pb-1 mr-4"
                                                                onclick="confirmcarModelDelete('{{this.Model_Name}}','{{../this._id}}','{{this.modelId}}')">
                                                                
                                                                    <i class="material-icons">delete</i>
                                                               
                                                            </button>

                                                            <li><span><img style="width:50px;height:50px"
                                                                        src="/car-model-images/{{this.modelId}}CMI.jpg"
                                                                        alt=""></span><span
                                                                    style="margin-left: 10px;">{{this.Model_Name}}</span>
                                                            </li>




                                                        </div>

                                                        {{/each}}
                                                    </ol>
                                                </td>

                                            </tr>

                                            {{/each}}

                                        </tbody>
                                    </table>

                                </div>

                            </div>


                        </div>
                    </div>
                </div>

                <div class="col-md-1 col-sm-1 col-1"></div>

            </div>

        </div>



        {{>admin-footer}}

    </div>
</div>

<style>
    .table thead tr th {
        font-weight: bold;

    }
</style>
<script>

    function confirmcarBrandDelete(carBrand, id) {

        swal({
            title: "Are you sure?",
            text: `Do you want to delete the brand ${carBrand} ?`,
            icon: "warning",
            buttons: true,
            dangerMode: true,
        }).then((willDelete) => {
            if (willDelete) {

                $.ajax({
                    url: '/admin/delete-carBrand?id=' + id,
                    method: 'get',
                    success: (result) => {
                        if (result) {
                            sessionStorage.setItem("carBrandDeleted", "true");
                            location.reload()
                        } else {
                            console.log('Failed to delete category')
                        }
                    }
                })

            }
        });

    }

    function confirmcarModelDelete(modelName,carBrandId,carModelId) {

        swal({
            title: "Are you sure?",
            text: `Do you want to delete the brand ${modelName} ?`,
            icon: "warning",
            buttons: true,
            dangerMode: true,
        }).then((willDelete) => {
            if (willDelete) {

                $.ajax({
                    url:'/admin/delete-carModel?brandId='+carBrandId+'&modelId='+carModelId,
                    method: 'get',
                    success: (result) => {
                        if (result) {
                            sessionStorage.setItem("carModelDeleted", "true");
                            location.reload()
                        } else {
                            console.log('Failed to delete category')
                        }
                    }
                })

            }
        });

    }

</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.11/cropper.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.11/cropper.js"></script>

<script>

    function buttonDisplay() {
        document.getElementById('confirm-btn').style.display = 'block';
        document.getElementById('file1').value=''
    }

    function buttonDisplay1() {
        document.getElementById('confirm-btn1').style.display = 'block';
        document.getElementById('file2').value=''
    }



    function fileValidation1() {

        const imagebox = document.getElementById('image-box')
        const crop_btn = document.getElementById('crop-btn')
        var fileInput = document.getElementById('file1');

        var filePath = fileInput.value;
        var allowedExtensions = /(\.jpg|\.jpeg|\.webp|\.png)$/i;

        if (!allowedExtensions.exec(filePath)){

            document.getElementById('errMsg1').innerHTML = '<p style="color:red;">Unsupported file type</p>'
            fileInput.value = '';
            return false;

        } else {

            //Image input field id
            var fileTrue = document.getElementById('file1').onchange.length
            if (fileTrue == 1) {
                document.getElementById('file1').dataset.target = '#exampleModalCenter'
                //Give modal target to the input field

                //add a click event to the input field so that the modal could open
                document.getElementById('file1').click()

                //Making filetrue to 0 So that the modal will only open if there is a file 
                fileTrue = 0
            }
            //Making data target to none so that modal will open if there is a file
            document.getElementById('file1').dataset.target = 'none'

            //Image preview
            document.getElementById('errMsg1').innerHTML = ''
            const img_data = fileInput.files[0]
            const url = URL.createObjectURL(img_data)
            imagebox.innerHTML = `<img src="${url}" id="image" style="width:100%">`
            const image = document.getElementById('image')
            document.getElementById('image-box').style.display = 'block'
            document.getElementById('crop-btn').style.display = 'block'
            document.getElementById('confirm-btn').style.display = 'none'

            const cropper = new Cropper(image, {

                autoCropArea: 1,
                viewMode: 1,
                scalable: false,
                zoomable: false,
                movable: false,
                aspectRatio: 157 / 155,
                //preview: '.preview',
                minCropBoxWidth: 180,
                minCropBoxHeight: 240,

            })

            crop_btn.addEventListener('click', () => {

                cropper.getCroppedCanvas().toBlob((blob) => {

                    let fileInputElement = document.getElementById('file1');
                    let file = new File([blob], img_data.name, { type: "image/*", lastModified: new Date().getTime() });
                    let container = new DataTransfer();

                    container.items.add(file);
                    const img = container.files[0]
                    var url = URL.createObjectURL(img)
                    fileInputElement.files = container.files;
                    document.getElementById('imgview1').src = url
                    document.getElementById('image-box').style.display = 'none'
                    document.getElementById('crop-btn').style.display = 'none'
                    document.getElementById('confirm-btn').style.display = 'block'

                });

            });

        }

    }

