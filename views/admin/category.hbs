<div class="wrapper ">
    {{>admin-sidebar}}
    <div class="main-panel">
        {{>admin-navbar}}
        <div class="content">

            <div class="row">
                <div class="col-md-1 col-sm-1 col-1"></div>
                <div class="col-md-10 col-sm-10 col-10" >
                    <div class="card ">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title text-center" style="font-weight: bold">CATEGORY MANAGEMENT</h4>
                        </div>
                        {{#if Msg}}
                        <div>
                            <h5 class="text-center mt-2" style="color:yellowgreen;font-weight:normal">{{Msg}}</h5>
                        </div>
                        {{/if}}
                        {{#if Err}}
                        <div>
                            <h5 class="text-center mt-2" style="color:red;font-weight:normal">{{Err}}</h5>
                        </div>
                        {{/if}}
                        <div class="card-body text-left">

                            <div class="row">
                                <div class="col">

                                    <div class="d-flex ml-3">
                                        <form action="/admin/add-mainCat" style="display: flex;" method="post">

                                            <input name="Main_Cat" class="form-control" type="text"
                                                placeholder="Add new main category">
                                            <button type="submit" id="confirm-btn" class="btn btn-primary btn-sm"><i
                                                    class="material-icons">add_to_photos</i></button>

                                        </form>
                                    </div>

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="text-center" scope="col">Sl.No</th>
                                                <th class="text-center" scope="col">Main Category</th>
                                                <th class="text-center" scope="col">Sub-Category</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            {{#each Categories}}
                                            <tr>

                                                <td class="text-center">{{add @index '1'}}</td>

                                                <td class="text-center">
                                                    <button type="button" rel="tooltip" title="Remove Category"
                                                        class="btn btn-white btn-link btn-sm p-0 pb-1"
                                                        onclick="return confirm('Do you want to delete product - {{this.Main_Cat}} ?')">
                                                        <a href="/admin/delete-category?id={{this._id}}">
                                                            <i class="material-icons">delete</i>
                                                        </a>
                                                    </button>
                                                    {{this.Main_Cat}}
                                                </td>

                                                <td>
                                                    <ol>
                                                        <form action="/admin/add-subCat" style="display: flex;"
                                                            method="post">
                                                            <input name="mainCat_Id" class="form-control" type="hidden"
                                                                value="{{this._id}}">
                                                            <input name="Sub_Cat" class="form-control" type="text"
                                                                placeholder="Add new sub category">
                                                            <button type="submit" id="confirm-btn"
                                                                class="btn btn-primary btn-sm"><i
                                                                    class="material-icons">add_to_photos</i></button>

                                                        </form>

                                                        {{#each this.Sub_Cat}}

                                                        <div class="d-flex">


                                                            <button type="button" rel="tooltip"
                                                                title="Remove Sub-Category"
                                                                class="btn btn-white btn-link btn-sm p-0 pb-1 mr-4"
                                                                onclick="return confirm('Do you want to delete product - {{this}} ?')">
                                                                <a
                                                                    href="/admin/delete-subCategory?id={{../this._id}}&name={{this}}">
                                                                    <i class="material-icons">delete</i>
                                                                </a>
                                                            </button>

                                                            <li>{{this}}</li>


                                                        </div>

                                                        {{/each}}
                                                    </ol>
                                                </td>

                                            </tr>

                                            {{/each}}

                                        </tbody>
                                    </table>

                                </div>

                            </div>


                        </div>
                    </div>
                </div>

                <div class="col-md-1 col-sm-1 col-1"></div>

            </div>

        </div>



        {{>admin-footer}}

    </div>
</div>

<style>
    .table thead tr th {
        font-weight: bold;

    }
</style>