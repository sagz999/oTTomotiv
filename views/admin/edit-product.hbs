                                    <div class="col-md-3 my-1">
                                        <label style="font-weight:bold;">Product Brand</label>
                                        <select name="Product_Brand" class="custom-select mr-sm-2">
                                            <option selected>{{product.Product_Brand}}</option>
                                            <option>Dummy</option>

                                        </select>
                                    </div>

                                    <div class="col-md-3 my-1">
                                        <label style="font-weight:bold;">Car Brand</label>
                                        <select name="Car_Brand" class="custom-select mr-sm-2">
                                            <option selected>{{product.Car_Brand}}</option>
                                            <option>Dummy</option>

                                        </select>
                                    </div>

                                    <div class="col-md-3 my-1">
                                        <label style="font-weight:bold;">Car Model</label>
