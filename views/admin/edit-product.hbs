<div class="wrapper ">
    {{>admin-sidebar}}
    <div class="main-panel">
        {{>admin-navbar}}
        <div class="content">

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title text-center" style="font-weight: bold">Edit Product</h4>
                            {{!-- <p class="card-category">Please add your product here</p> --}}
                        </div>
