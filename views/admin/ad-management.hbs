<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>

<script>

    //input field validation
    $(document).ready(function () {

        $('#addNewAd').validate({
            ignore: "",
            rules: {

                Offer: {
                    required: true
                },
                Img1: {
                    required: true
                }
            },

            messages: {
                Offer: {
                    required: "Choose an offer"
                },
                Img1: {
                    required: "Choose an Ad image"
                }
            }

        })
    })

</script>
