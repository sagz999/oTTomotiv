<section id="page-title" class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h3>MY ORDERS</h3>
            </div>


        </div>

    </div>

</section>

<section>

    <div style="background-color: rgb(243, 250, 247);" class="table-responsive">
        <table class="table " cellspacing="0" id="Search" style=" border-style: solid;3 px ;">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Date</th>

                    <th>Name</th>
                    <th>Address</th>
                    <th>Payment Method</th>
                    <th>Total Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each allOrders}}
                <tr>
                    <td scope="row">{{add @index '1'}}</td>

                    <td>{{this.Date}}</td>

                    <td>{{this.Name}}</td>
                    <td>{{this.Address.Company_Name}} <br>
                        {{this.Address.Street_Address}} <br>
                        {{this.Address.Extra_Details}} <br>
                        {{this.Address.Town_City}} <br>
                        {{this.Address.Country_State}} <br>
                        {{this.Address.Post_Code}}<br>
                        {{this.Phone.Phone}}<br>
                        {{this.Phone.Alt_Phone}}
                    </td>
                    <td>{{this.Pay_Method}}</td>
                    <td>{{this.Total_Amount}}</td>

                    <td>
                        <a href="/view_order_products/{{this._id}}" class="btn btn-primary">View
                            Products</a><br><br>
                            
                        <a href="/UserOrderInvoice/{{this._id}}" class="btn btn-success">Order Invoice</a>


                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>


    </div>

