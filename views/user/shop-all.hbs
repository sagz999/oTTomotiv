                                <option value="Small">Highest Price</option>
                                <option value="Medium">Lowest Price</option>
                            </select>
                        </div> --}}

                    </div>

                </div>

                <div class="row">

                    {{#each products }}

                    <div class="col-xs-12 col-sm-6 col-md-4 product">
                        <div class="product-img">
                            <img src="/product-images/{{this._id}}_1.jpg" alt="Product" />
                            <div class="product-hover">
                                <div class="product-action">
                                    {{#if ../user}}

                                    <a class="btn btn-primary" href="/prodBuyNow?prodId={{this._id}}">Buy now</a>

                                    {{#hello ../cart this._id this.Price this.Product_Name}}

                                    {{/hello}}

                                    {{else}}

                                    <a class="btn btn-primary" href="/login">Buy now</a>

                                    <a class="btn btn-primary" href="/login">Add to cart</a>

                                    {{/if}}
                                </div>
                            </div>

                        </div>

                        <div class="product-bio">
                            <div class="prodcut-cat">
                                <a href="/shopByProdBrand?prodBrand={{this.Product_Brand}}">{{this.Product_Brand}}</a>
                            </div>

                            <div class="prodcut-title">
                                <h3>
                                    <a href="/view-product?id={{this._id}}">{{this.Product_Name}}</a>
                                </h3>
                            </div>

                            <div class="product-price">
                                <span class="symbole">â‚¹</span><span>{{this.Price}}</span>
                            </div>

                        </div>

                    </div>

                    {{/each}}


                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
