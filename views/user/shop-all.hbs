{{>userheader}}

<section id="shopgrid" class="shop shop-grid">
    <div class="container">
        <div class="row">
            <div class="col-md-3">

                <div class="widget widget-categories">
                    <div class="widget-title">
                        <h5>categories</h5>
                    </div>

                    <div class="sidenav">
                        <ul class="list-unstyled">
                            <li><a href="/shop" style="cursor: pointer;"><i class="fa fa-angle-double-right"></i>All
                                    Categories</a>
                            </li>
                            {{#each categories}}
                            <li>

                                <a href="/catFilter?mainCat={{this.Main_Cat}}" style="cursor: pointer;"><i
                                        class="fa fa-angle-double-right"></i>{{this.Main_Cat}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                </div>

                <div class="widget widget-categories" style="margin-top: 20px;">
                    <div class="widget-title">
                        <h5>Brands</h5>
                    </div>
                    <div class="widget-content">
                        <ul class="list-unstyled">
                            <li><a href="/shop" style="cursor: pointer;"><i class="fa fa-angle-double-right"></i>All
                                    Brands</a>
                            </li>
                            {{#each prodBrands}}
                            <li>
                                <a href="/brandFilter?prodBrand={{this.Prod_Brand}}" style="cursor: pointer;"><i
                                        class="fa fa-angle-double-right"></i>{{this.Prod_Brand}}</a>
                            </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>



            </div>

            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">

                        {{!-- <div class="product-num pull-left pull-none-xs">
                            <h3>Showing 1 : 16 of <span class="color-theme">245</span> product</h3>
                        </div>

                        <div class="product-options pull-right text-right pull-none-xs">
                            <i class="fa fa-angle-down"></i>
                            <select>
                                <option selected="" value="Default">Default Sorting</option>
                                <option value="Larger">Newest Items</option>
                                <option value="Larger">oldest Items</option>
                                <option value="Larger">Hot Items</option>
                                <option value="Small">Highest Price</option>
                                <option value="Medium">Lowest Price</option>
                            </select>
                        </div> --}}

                    </div>

                </div>

                <div class="row">

                    {{#each products }}

                    <div class="col-xs-12 col-sm-12 col-md-4 product">
                        <div class="product-img">
                            <img src="/product-images/{{this._id}}_1.jpg" alt="Product" />
                            <div class="product-hover">
                                <div class="product-action">
                                    {{#gt this.Stock '0'}}
                                    {{#if ../user}}

                                    <a class="btn btn-primary" href="/prodBuyNow?prodId={{this._id}}">Buy now</a>



                                    {{#hello ../cart this._id this.Price this.Product_Name}}

                                    {{/hello}}

                                    {{else}}

                                    <a class="btn btn-primary"
                                        href="/login?prodId={{this._id}}&token=guestToBuyNow&guestRedirect=true">Buy
                                        now</a>


                                    <a class="btn btn-primary"
                                        href="/login?prodId={{this._id}}&prodPrice={{this.Price}}&prodName={{this.Product_Name}}&token=guestToCart&guestRedirect=true">Add
                                        to cart</a>

                                    {{/if}}
                                    {{else}}
                                    <img src="/product-images/sold_out2.png" alt="Product" />
                                    {{/gt}}

                                </div>
                            </div>

                        </div>

                        <div class="product-bio">
                            <div class="prodcut-cat">
                                <a href="/shopByProdBrand?prodBrand={{this.Product_Brand}}">{{this.Product_Brand}}</a>
                            </div>

                            <div class="prodcut-title">
                                <h3>
                                    <a href="/view-product?id={{this._id}}">{{this.Product_Name}}</a><br>
                                </h3>
                            </div>

                            <div class="product-price">

                                <span class="symbole">₹</span><span>{{this.Price}}</span>
                                {{#if this.offer}}
                                <br><span style="font-size: small;">MRP : ₹<s>{{this.tempPrice}}</s><span
                                        style="color: green;">
                                        {{this.offer}}%
                                        OFF</span></span>

                                {{/if}}
                            </div>

                        </div>

                    </div>

                    {{/each}}


                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        {{!-- <ul class="pagination">
                            <li class="active">
                                <a href="#">1</a>
                            </li>
                            <li>
                                <a href="#">2</a>
                            </li>
                            <li>
                                <a href="#">3</a>
                            </li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true"><i class="fa fa-angle-right"></i></span>
                                </a>
                            </li>
                        </ul> --}}
                    </div>

                </div>
            </div>

        </div>

    </div>

</section>

{{>userfooter}}

