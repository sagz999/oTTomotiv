{{>userheader}}

<section id="shopgrid" class="shop shop-grid">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-3 sidebar">

                <div class="widget widget-categories">
                    <div class="widget-title">
                        <h5>categories</h5>
                    </div>
                    <div class="widget-content">
                        <ul class="list-unstyled nav">
                            {{#each categories}}
                            <li class="has-dropdown">
                                <a style="cursor: pointer;" data-toggle="dropdown" class="dropdown-toggle"><i
                                        class="fa fa-angle-double-right"></i>{{this.Main_Cat}}</a>

                                <ul class="dropdown-menu dropdown-menu-right">
                                    {{#each this.Sub_Cat}}
                                    <li>
                                        <a href="Sub"><i
                                            class="fa fa-angle-double-right"></i>{{this.Sub_Cat}} </a>
                                    </li>
                                    
                                    {{/each}}
                                </ul>

                            </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>

                <div class="widget widget-categories">
                    <div class="widget-title">
                        <h5>Brands</h5>
                    </div>
                    <div class="widget-content">
                        <ul class="list-unstyled nav">
                            {{#each prodBrands}}
                            <li>
                                <a href=""><i
                                        class="fa fa-angle-double-right"></i>{{this.Prod_Brand}}</a>
                            </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>



            </div>

            <div class="col-xs-12 col-sm-12 col-md-9">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="product-num pull-left pull-none-xs">
                            <h3>Showing 1 : 16 of <span class="color-theme">245</span> product</h3>
                        </div>

                        <div class="product-options pull-right text-right pull-none-xs">
                            <i class="fa fa-angle-down"></i>
                            <select>
                                <option selected="" value="Default">Default Sorting</option>
                                <option value="Larger">Newest Items</option>
                                <option value="Larger">oldest Items</option>
                                <option value="Larger">Hot Items</option>
                                <option value="Small">Highest Price</option>
                                <option value="Medium">Lowest Price</option>
                            </select>
                        </div>

                    </div>

                </div>

                <div class="row">

                    {{#each products }}

                    <div class="col-xs-12 col-sm-6 col-md-4 product">
                        <div class="product-img">
                            <img src="/product-images/{{this._id}}_1.jpg" alt="Product" />
                            <div class="product-hover">
                                <div class="product-action">
                                    {{#if ../user}}

                                    <a class="btn btn-primary" href="/prodBuyNow?prodId={{this._id}}">Buy now</a>

                                    {{#hello ../cart this._id this.Price this.Product_Name}}

                                    {{/hello}}

                                    {{else}}

                                    <a class="btn btn-primary" href="/login">Buy now</a>

                                    <a class="btn btn-primary" href="/login">Add to cart</a>

                                    {{/if}}
                                </div>
                            </div>

                        </div>

                        <div class="product-bio">
                            <div class="prodcut-cat">
                                <a href="/shopByProdBrand?prodBrand={{this.Product_Brand}}">{{this.Product_Brand}}</a>
                            </div>

                            <div class="prodcut-title">
                                <h3>
                                    <a href="/view-product?id={{this._id}}">{{this.Product_Name}}</a>
                                </h3>
                            </div>

                            <div class="product-price">
                                <span class="symbole">â‚¹</span><span>{{this.Price}}</span>
                            </div>

                        </div>

                    </div>

                    {{/each}}


                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <ul class="pagination">
                            <li class="active">
                                <a href="#">1</a>
                            </li>
                            <li>
                                <a href="#">2</a>
                            </li>
                            <li>
                                <a href="#">3</a>
                            </li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true"><i class="fa fa-angle-right"></i></span>
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>

        </div>

    </div>

</section>

{{>userfooter}}

<script>

    function addToCart(prodId, price, prodName) {
        $.ajax({

            url: '/add-to-cart?id=' + prodId + '&price=' + price + '&prodName=' + prodName,
            method: 'get',
            success: (response) => {

                if (response.status) {
                    let count = $('#cart-count').html()
                    count = parseInt(count) + 1
                    $("#cart-count").html(count)
                    swal("Success!", "Product added to cart!", "success", {
                        button: "OK",
                    }).then(() => {
                        location.reload()
                    })

                }

            }
        })
    }

</script>