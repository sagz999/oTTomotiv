{{>userheader}}

<section id="page-title" class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h3>EDIT-ADDRESS</h3>
            </div>


        </div>

    </div>

</section>

<section class="bodysection">
    <div class="container">

        <div class="row">

            <form class="form" action="/edit-address" method="post" id="editAddress">
                <input type="hidden" name="addressId" value="{{address.addressId}}">

                <div class="form-group">

                    <div class="col-xs-3">
                        <label for="first_name">
                            <h6>First Name</h6>
                        </label>
                        <input type="text" class="form-control" name="First_Name" id="firstName"
                            value="{{address.First_Name}}" placeholder="first name">
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-xs-3">
                        <label for="last_name">
                            <h6>Last Name</h6>
                        </label>
                        <input type="text" class="form-control" name="Last_Name" id="last_name"
                            value="{{address.Last_Name}}" placeholder="last name">
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-xs-6">
                        <label for="last_name">
                            <h6>Company / House name</h6>
                        </label>
                        <input type="text" class="form-control" name="Company_Name" id="last_name"
                            value="{{address.Company_Name}}" placeholder="company/house name"
                            >
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-xs-6">
                        <label for="phone">
                            <h6>Address line 1</h6>
                        </label>
                        <input type="text" class="form-control" name="Street_Address" id="Address line 1"
                            value="{{address.Street_Address}}" placeholder="street address"
                            >
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-6">
                        <label for="mobile">
                            <h6>Address line 2</h6>
                        </label>
                        <input type="text" class="form-control" name="Extra_Details" id="Address line 2"
                            value="{{address.Extra_Details}}" placeholder="Address line 2"
                            >
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-xs-6">
                        <label for="email">
                            <h6>Town / City</h6>
                        </label>
                        <input type="text" class="form-control" name="Town_City" id="city" value="{{address.Town_City}}"
                            placeholder="town/city">
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-xs-6">
                        <label for="email">
                            <h6>Country / State</h6>
                        </label>
                        <input type="text" class="form-control" name="Country_State" id="state"
                            value="{{address.Country_State}}" placeholder="country/state"
                          >
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-xs-6">
                        <label for="password">
                            <h6>PIN code</h6>
                        </label>
                        <input type="number" class="form-control" name="Post_Code" id="pincode"
                            value="{{address.Post_Code}}" placeholder="pincode">
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-xs-3">
                        <label for="password">
                            <h6>Phone</h6>
                        </label>
                        <input type="number" class="form-control" name="Phone" id="contact" value="{{address.Phone}}"
                            placeholder="phone" >
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-xs-3">
                        <label for="password">
                            <h6>Alternate Phone</h6>
                        </label>
                        <input type="number" class="form-control" name="Alt_Phone" id="contact"
                            value="{{address.Alt_Phone}}" placeholder="alternate phone"
                            >
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12 text-center">
                        <br><br>
                        <button class="btn btn-success" type="submit">Update</button>

                    </div>
                </div>
            </form>


        </div>
    </div>
</section>
{{>userfooter}}

<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>

<script>

    //input field validation

    $(document).ready(function () {

        $.validator.addMethod("alpha", function (value, element) {
            return this.optional(element) || value == value.match(/^[a-zA-Z\s]+$/);
        });

        $('#editAddress').validate({

            rules: {

                First_Name: {
                    required: true,
                    alpha: true,
                    minlength: 3,
                },

                Last_Name: {
                    required: true,
                    alpha: true
                },

                Company_Name: {
                    required: true,
                    minlength: 3
                },

                Street_Address: {
                    required: true,
                    minlength: 3
                },

                Extra_Details: {
                    required: true,
                    minlength: 3
                },

                Town_City: {
                    required: true,
                    alpha: true,
                    minlength: 3
                },

                Country_State: {
                    required: true,
                    alpha: true,
                    minlength: 3
                },

                Post_Code: {
                    required: true,
                    minlength: 6,
                    maxlength: 6
                },

                Phone: {
                    required: true,
                    minlength: 10,
                    maxlength: 10
                },

                Alt_Phone: {
                    required: true,
                    minlength: 10,
                    maxlength: 10
                }


            },

            messages: {

                First_Name: {
                    alpha: "Name should be in alphabets"
                },

                Last_Name: {
                    alpha: "Name should be in alphabets"
                },
                Town_City: {
                    alpha: "This field should be in alphabets"
                },

                Country_State: {
                    alpha: "This field should be in alphabets"
                }
               

            }

        })

    })

</script>

