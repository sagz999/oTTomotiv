<script>
    function addToCart(prodId, price) {
        $.ajax({
            url: '/add-to-cart?id=' + prodId + '&price=' + price,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    let count = $('#cart-count').html()
                    count = parseInt(count) + 1
                    $("#cart-count").html(count)
                    location.reload()
                }
            }
        })
    }
</script>