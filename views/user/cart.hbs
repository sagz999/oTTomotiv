{{>userheader}}

<section id="page-title" class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h3>Cart</h3>
            </div>


        </div>

    </div>

</section>

{{#if cartProd}}

<section id="shopcart" class="shop shop-cart">
    
    <div class="container">
        <div class="row">
            <div class="cart-table table-responsive">
                <table class="table table-bordered">

                    <thead class="thead-dark">

                        <tr class="cart-product">

                            <th class="cart-product-item">Product</th>
                            <th class="cart-product-price">Price</th>
                            <th class="cart-product-quantity">Quantity</th>
                            <th class="cart-product-total">Total</th>
                            <th class="cart-product-total">Action</th>

                        </tr>

                    </thead>

                    <tbody>
                        
                        {{#each cartProd}}

                        <tr class="cart-product">

                            <td class="cart-product-item">

                                <div class="cart-product-img">
                                    <img src="/product-images/{{this.product._id}}_1.jpg" alt="product"
                                        style="height: 60px;width: 60px; margin-inline: 20px;">
                                </div>

                                <div class="cart-product-name">
                                    <h6>{{this.product.Product_Name}}</h6>
                                </div>

                            </td>

                            <td class="cart-product-price">₹ {{this.product.Price}}</td>



                            <td class="cart-product-quantity">

                                <div class="product-quantity">

                                    <a style="cursor: pointer;"
                                        onclick="changeQty('{{this._id}}','{{this.product._id}}',-1,'{{this.product.Price}}','{{../user._id}}')">
                                        <i class="fa fa-minus"></i>
                                    </a>

                                    <span id="{{this.product._id}}">{{this.quantity}}</span>

                                    <a style="cursor: pointer;"
                                        onclick="changeQty('{{this._id}}','{{this.product._id}}',1,'{{this.product.Price}}','{{../user._id}}')">
                                        <i class="fa fa-plus"></i>
                                    </a>

                                </div>

                            </td>

                            <td class="cart-product-total">₹<span id="{{this.product._id}}1">{{this.total}}</span>
                            </td>

                            <td>


                                <!-- Button trigger modal -->
                                <a style="cursor: pointer;" data-toggle="modal" data-target="#exampleModalCenter">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-trash" viewBox="0 0 16 16">
                                        <path
                                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                        <path fill-rule="evenodd"
                                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                    </svg>
                                </a>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Do you want to remove
                                                    this product?</h5>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-sm btn-success"
                                                    data-dismiss="modal">Close</button>

                                                <button type="button" class="btn btn-danger btn-sm"
                                                    onclick="deleteProd('{{this._id}}','{{this.product._id}}')">Confirm</button>

                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </td>

                        </tr>

                        {{/each}}

                    </tbody>

                </table>

                <div class="row clearfix text-right" style="margin-right: 10px;margin-top:30px">

                    <h6>Cart Subtotal : ₹<span class="pull-right text-right" id="ctotal">{{cartTotal}}</span></h6>
                    <a class="btn btn-primary" href="/cartCheckout">Proceed To Checkout</a>

                </div>

            </div>

        </div>

    </div>

</section>

{{else}}
<section>

    <center>
        <h1 style="color: red;">Sorry your cart is empty!</h1>
        <img src="/images/logo/empty-cart.png" width="120" height="120"><br>
        <a class="btn btn-primary" href="/" style="margin-top: 30px;">Add some products</a>
    </center>

</section>

{{/if}}

{{>userfooter}}