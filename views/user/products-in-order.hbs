{{>userheader}}

<section id="page-title" class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h3>Ordered Products</h3>
            </div>


        </div>

    </div>

</section>

<section style="padding-top:0;padding-bottom:12px;">
    <div class="container">

        <div class="row">

            {{#if prodsInOrder}}
            
            {{#each prodsInOrder}}
            <div class="col-md-4" style="margin-top: 5% ;">

                <div class="card text-center" style="width: 18rem; border-color: black;">
                    <a class="alink" href="/view-product?id={{this.product._id}}">
                        <img class="card-img-top" src="/product-images/{{this.product._id}}_1.jpg" alt="Card image cap"
                            width="150 " height="150">
                    </a>

                    <div class="card-body">
                        <a class="alink" href="/view-product?id={{this.product._id}}">
                            <h6 class="card-title" style="margin-bottom:5px">{{this.product.Product_Name}}</h6>
                        </a>
                        <p style="font-size: small;margin-bottom: 0">Placed On:{{../Order.Date}}</p>
                        <p style="font-size: small;margin-bottom:5px">Time:{{../Order.Time}}</p>
                        <h6 class="card-subtitle mb-2 text-muted" style="margin-bottom:3px">Unit Price:
                            &#x20B9;{{this.product.Price}}</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Quantity:{{this.quantity}}</h6>
                        <h5 class="bold">
                            <span class="mt-5" style="color: firebrick;">Total:&#x20B9;{{this.total}}</span>
                            <span class="small text-muted"> via
                                ({{../Order.Pay_Method}})</span>
                        </h5>

                        <h6 class="bold">
                            <span class="mt-5 text-muted">Status:</span>
                            <span class="mt-5" style="color: green;">{{this.status}}</span>
                        </h6>
                        {{#eq this.status 'Cancelled'}}

                        {{else}}
                        {{#eq Order.Status 'Delivered'}}
                        <a class="btn btn-success btn-sm" href="/get-orderInvoice?orderId={{this._id}}">
                            Get Invoice
                        </a>

                        {{else}}

                        <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#{{this.product._id}}">
                            Cancel order
                        </button>
                        

                        <!-- Modal -->
                        <div class="modal fade" id="{{this.product._id}}" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Do you want to cancel this
                                            order?</h5>
                                    </div>
                                    <div class="modal-body" style="color: black;">
                                        Order once cancelled cannot be reverted back
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-info btn-sm"
                                            data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-danger btn-sm"
                                            onclick="changeUserOrderStat('{{this._id}}','{{this.product._id}}','{{this.quantity}}')">Cancel</button>
                                        {{!-- <a class="btn btn-danger btn-sm"
                                            href="/cancelProdInOrder?orderId={{this._id}}&prodId={{this.product._id}}&status=Cancelled">Cancel
                                            order</a> --}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/eq}}
                        {{/eq}}

                    </div>
                </div>

            </div>
            {{/each}}

            {{else}}

            <div class="col-md-4" style="margin-top: 5% ;">

                <div class="card text-center" style="width: 18rem;">
                    <a class="alink" href="/view-product?id={{Order.ProdId}}">
                        <img class="card-img-top" src="/product-images/{{Order.ProdId}}_1.jpg" alt="Card image cap"
                            width="150 " height="150">
                    </a>

                    <div class="card-body">

                        <a class="alink" href="/view-product?id={{Order.ProdId}}">
                            <h6 class="card-title" style="margin-bottom:5px">{{Order.Product_Name}}</h6>
                        </a>
                        <p style="font-size: small;margin-bottom: 0">Placed On:{{Order.Date}}</p>
                        <p style="font-size: small;margin-bottom:5px">Time:{{Order.Time}}</p>
                        <h5 class="bold">
                            <span class="mt-5" style="color: firebrick;">Price:&#x20B9;{{Order.Price}}</span>
                            <span class="small text-muted"> via
                                ({{Order.Pay_Method}})</span>
                        </h5>

                        <h6 class="bold">
                            <span class="mt-5 text-muted">Status:</span>
                            <span class="mt-5" style="color: green;">{{Order.Status}}</span>
                        </h6>


                        {{#eq Order.Status 'Cancelled'}}

                        {{else}}

                        {{#eq Order.Status 'Delivered'}}
                        <a class="btn btn-success btn-sm" href="/get-orderInvoice?orderId={{Order._id}}">
                            Get Invoice
                        </a>

                        {{else}}
                        <!-- Button trigger modal -->
                        <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModalCenter">
                            Cancel order
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Do you want to cancel this
                                            order?</h5>
                                    </div>
                                    <div class="modal-body" style="color: black;">
                                        Order once cancelled cannot be reverted back
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-info btn-sm"
                                            data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-danger btn-sm"
                                            onclick="changeUserOrderStat1('{{Order._id}}','{{Order.ProdId}}')">Cancel
                                            order</button>
                                        {{!-- <a class="btn btn-danger btn-sm"
                                            href="/cancelBuyNowOrder?orderId={{Order._id}}&status=Cancelled">Cancel
                                            order</a> --}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/eq}}
                        {{/eq}}

                    </div>
                </div>

            </div>


            {{/if}}
        </div>
    </div>
</section>
{{>userfooter}}



<script>

    function changeUserOrderStat(orderId, prodId, quantity) {


        $.ajax({
            url: '/cancelProdInOrder',
            data: {
                orderId: orderId,
                prodId: prodId,
                status: 'Cancelled',
                quantity: quantity
            },
            method: 'post',
            success: () => {
                location.reload()
            }
        })
    }


    function changeUserOrderStat1(orderId, prodId) {

        $.ajax({
            url: '/cancelBuyNowOrder',
            data: {
                orderId: orderId,
                status: 'Cancelled',
                prodId: prodId
            },
            method: 'post',
            success: () => {
                location.reload()
            }
        })
    }


</script>

